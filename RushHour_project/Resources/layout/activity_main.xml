<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/enhanced_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">
        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:src="@drawable/game_logo_main1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/initialButtonsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <Button
                android:id="@+id/playBtn_home"
                android:backgroundTint="@android:color/holo_green_dark"
                app:cornerRadius="25dp"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="play"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/statsBtn_home"
                android:backgroundTint="#D4A017"
                app:cornerRadius="25dp"
                android:layout_marginTop="5dp"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="stats"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/settingsBtn_home"
                android:backgroundTint="@android:color/holo_red_dark"
                app:cornerRadius="25dp"
                android:layout_marginTop="5dp"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="settings"
                android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:backgroundTint="@android:color/transparent"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"/>
            <Button
                android:textSize="20dp"
                android:backgroundTint="@android:color/transparent"
                android:textAllCaps="false"
                android:id="@+id/leaderboardBtn"
                android:layout_marginLeft="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="leaderboard"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>