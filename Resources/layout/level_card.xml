<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:background="@drawable/enhanced_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">

            <ImageView
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:background="@drawable/rushhourdeluxelogo" />
        </LinearLayout>

        <!-- Grid board -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:gravity="center">

            <GridView
                android:id="@+id/card_boardGrid"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:numColumns="6"
                android:columnWidth="40dp"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:stretchMode="none"
                android:background="#CCCCCC"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Bottom info bar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/card_levelBackground"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#ccda9f">

                <TextView
                    android:id="@+id/card_levelTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_difficultyBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#99c120">

                <TextView
                    android:id="@+id/card_difficultyTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beginner"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

