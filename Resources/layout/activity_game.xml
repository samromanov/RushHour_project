<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enhanced_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="108dp">
            <Button
                android:id="@+id/lastLevelBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="last"
                android:layout_marginRight="20dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="150dp"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/gameDifficultyTxt"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="Difficulty"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/gameLevelTxt"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="#37"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <Button
                android:id="@+id/nextLevelBtn"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="next"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/gradient_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Record: "/>
                    <TextView
                        android:id="@+id/stepsRecordTxt"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:id="@+id/stepCounter_hundredsDigit"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:text="0"
                        android:background="@android:color/white"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/stepCounter_tensDigit"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:text="0"
                        android:background="@android:color/white"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/stepCounter_onesDigit"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:text="0"
                        android:background="@android:color/white"
                        android:layout_width="30dp"
                        android:layout_height="35dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/resetBtn"
                    android:textStyle="italic"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="reset"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/game_solutionBtn"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textStyle="italic"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="solution"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="370dp">
            <View
                android:layout_gravity="center"
                android:id="@+id/boardBorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="#CCCCCC"/>
            <!--34383b-->
            <View
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:layout_gravity="top|right"
                android:translationY="128dp"
                android:translationX="-4dp"
                android:background="@drawable/exitsign2"/>
            <GridView
                android:background="#CCCCCC"
                android:layout_gravity="center"
                android:id="@+id/boardGrid"
                android:layout_width="312dp"
                android:layout_height="312dp"
                android:numColumns="6"
                android:columnWidth="52dp"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:stretchMode="none"/>

        </FrameLayout>
        <LinearLayout
            android:background="@drawable/gradient_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/game_backBtn"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/white"
                android:textStyle="italic"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginRight="120dp"/>

            <Button
                android:id="@+id/game_homeBtn"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/white"
                android:textStyle="italic"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
